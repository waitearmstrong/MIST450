@model IEnumerable<RegionalVote>

@{
    ViewData["Title"] = "ListOfRegionalVotes";
}


<!DOCTYPE html>

<html>
<head>

</head>
<body>
<div>
    <h1>@ViewData["Title"]</h1>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Student</th>
            <th>Position</th>
            <th>School</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (RegionalVote eachVote in Model)
        {
            <tr>
                <td>@eachVote.coach.FullName</td>
                <td>@eachVote.Po</td>
                <td>
                    @foreach (TeamPlayer eachTeamPlayer in @eachPlayer.TeamPlayers)
                    {
                        @eachTeamPlayer.team.School.SchoolName <br />
                    }
                </td>
                <td>
                    @foreach (TeamPlayer eachTeamPlayer in @eachPlayer.TeamPlayers)
                    {
                        @eachTeamPlayer.StartDate.ToShortDateString() <br />
                    }
                </td>
                <td>
                    @foreach (TeamPlayer eachTeamPlayer in @eachPlayer.TeamPlayers)
                    {
                        if (eachTeamPlayer.EndDate.HasValue)
                        {
                            @eachTeamPlayer.EndDate.Value.ToShortDateString()
                            <br />
                        }
                        else
                        {
                            <p>Current Player</p>
                        }
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>


</div>
</body>
</html>